/* pages/card/buy.wxss */
.footer{
  height:120rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px -2px 20px 0px rgba(0,0,0,0.05);
  position: fixed;
  bottom:0; 
  width: 100%;
}
.index_icon{
  width: 240rpx;
  float: left;
}
.index_icon1{
  width: 120rpx !important;
  float: left;
  padding: 0 !important;
  margin: 0;
  height: 100%;
  background: none;
}
.index{
  width:40rpx;
  height:40rpx;
  display: block;
  margin: 0 auto;
  margin-top: 20rpx;
}
.font{
  width:100%;
  height:28px;
  font-size:20rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:28px;
  text-align: center;
}

.buy{
   float: left;
   width:340rpx;
   height:88rpx;
   background:linear-gradient(180deg,rgba(208,174,114,1) 0%,rgba(198,155,81,1) 100%);
  font-size:32rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height: 88rpx;
  text-align: center;
  margin-top: 15rpx;
  margin-left: 30rpx;
}

.buy_card{

}
commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  height: 1050rpx;
}
.buy_title{
  font-size: 30rpx;
  font-weight: bold;
  padding-left: 50rpx;
  float: left;
}
.buy_top{
  border-bottom: 1px solid rgba(237,240,242,1);
  height: 80rpx;
  line-height: 55rpx;
}
.close_modal{
  float: right;
  width: 45rpx;
  height: 45rpx;
  line-height: 42rpx;
  text-align: center; 
  background: #ccc;
  color: #fff;
  border-radius: 50rpx;
  margin-right: 40rpx;
  font-size: 40rpx;
}

checkbox {
    width: 28rpx;
    height: 28rpx;
    float: left;
    margin: 50rpx 20rpx;
}
checkbox .wx-checkbox-input {
    width: 28rpx;
    height: 28rpx;
    border-radius: 28rpx;
    border: 1px solid #ccc;


}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
     background: #C19A55;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
    width: 28rpx;
    height: 28rpx;
    line-height: 28rpx;
    border-radius: 28rpx;
    text-align: center;
    font-size: 22rpx;
    color: #fff;
    background: transparent;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);

}

.card_list{
  width: 680rpx;
  border: 1px solid rgba(237,240,242,1);
  height: 130rpx;
  margin:30rpx auto  0;
}
.card_price{
  font-size: 36rpx;
  margin-top: 24rpx;
  text-align: left;
}
.card_name{
  font-size: 22rpx;
  text-align: left;
}
.card_mid{
  float: left;
  width: 160rpx;
  text-align: center;
}
.card_right{
  float: right;
  width: 420rpx;
  word-wrap:break-word; 
  word-break:break-all;
  font-size: 20rpx; 
  margin-top:10rpx; 
  margin-right: 20rpx;
  color: #A9A9A9;
}
.card_view{
  height: 800rpx;
  overflow: auto;
}

.buyMoment{
  width: 600rpx;
  height: 100rpx;
  background: linear-gradient(180deg,rgba(208,174,114,1) 0%,rgba(198,155,81,1) 100%);
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  line-height: 100rpx;
  margin: 30rpx auto;
}