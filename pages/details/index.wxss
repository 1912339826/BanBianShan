}

.scrollxbox .normal{
  border: 1rpx solid transparent;
}

.scrollxbox .active{
  border: 1rpx solid #C19A55;
}

.scrollx {
  /* width: 750rpx; */
  overflow-x: scroll;
  /* overflow-y:hidden;  */
  display: flex;
  flex-flow: row nowrap;
  height: 88rpx;
  align-items: center;
}

.scrollxbox::-webkit-scrollbar {
  width: 8rpx;
  height: 8rpx;
  color: #fff;
}

/*定义滚动条轨道 内阴影+圆角*/

.scrollxbox::-webkit-scrollbar-track {
  -webkit-box-shadow: inset 0 0 20rpx rgba(255, 255, 255, 0.3);
  box-shadow: inset 0 0 12rpx rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  background-color: #fff;
}

/*定义滑块 内阴影+圆角*/

.scrollxbox::-webkit-scrollbar-thumb {
  -webkit-box-shadow: inset 0 0 20rpx rgba(255, 255, 255, 0.3);
  box-shadow: inset 0 0 12rpx rgba(255, 255, 255, 0.1);
  background-color: #aaaaaa;
}

.scrollx>view>image {
  width: 80rpx;
  height: 80rpx;
}

.scrollx>view {
  width: 80rpx;
  height: 80rpx;
  margin-left: 20rpx;
}

/* 填充物 */

.scrollx>.filler {
  width: 20rpx;
  height: 80rpx;
  visibility: hidden;
  font-size: 10rpx;
  margin: 0;
}

