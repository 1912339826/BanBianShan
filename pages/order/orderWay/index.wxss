/* pages/order/orderWay/index.wxss */

.orderWay {
  background-color: #fff;
  height: 100vh;
}

.orderWay>.content {
  margin-top: 52rpx;
}

.orderWay>.content>.time {
  color: #a4a6a8;
  font-size: 24rpx;
  font-family: 400;
  display: flex;
  justify-content: center;
  align-content: center;
  margin-bottom: 20rpx;
}

.orderWay>.content>.time>view {
  line-height: 33rpx;
  height: 33rpx;
  margin-right: 24rpx;
}

.orderWay>.content>.time .van-count-down {
  color: #a4a6a8;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 33rpx;
  height: 33rpx;
}

.orderWay>.content>.money {
  display: flex;
  align-items: center;
  justify-content: center;
}

.orderWay>.content>.money>.moneysymbol {
  height: 32rpx;
  line-height: 32rpx;
  width: 17rpx;
  color: #111;
  font-weight: 500;
  font-family: "HellaDINUniversal-Medium";
  margin-right: 4rpx;
}

.orderWay>.content>.money>.moneycontent {
  height: 55rpx;
  line-height: 55rpx;
  font-size: 54rpx;
  color: #111;
  font-weight: 500;
}

.orderWay>.content>.name{
  font-weight: 400;
  color: #A4A6A8;
  font-size: 24rpx;
  height: 33rpx;
  line-height: 33rpx;
  margin-top: 20rpx;
  text-align: center;
}

