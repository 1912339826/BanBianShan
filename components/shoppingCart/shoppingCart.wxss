/* components/shoppingCart/shoppingCart.wxss */

.shoppingCart {
  height: 192rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 90;
}

.shoppingCart>.shoppingCartchild {
  height: 128rpx;
  background-color: #fff;
  margin-top: 64rpx;
  display: flex;
  justify-content: space-between;
  box-shadow:0px -4px 10px rgb(139, 139, 139);
}

.iconshopp {
  margin-top: -43rpx;
  margin-left: 20rpx;
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow:0px -4px 10px rgb(139, 139, 139);
}

.shoppingCart>.shoppingCartchild .txt {
  color: #c1c1c1;
  font-size: 20rpx;
  font-weight: 400;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.shoppingCart>.shoppingCartchild .shoppingCartchildLeft .top {
  display: flex;
}

.shoppingCart>.shoppingCartchild .shoppingCartchildLeft .bottom {
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.shoppingCart>.shoppingCartchild .shoppingCartchildLeft .bottom text:nth-child(1) {
  color: #c1172e;
  font-size: 26rpx;
  font-weight: 500;
}

.shoppingCart>.shoppingCartchild .shoppingCartchildLeft .bottom text:nth-child(2) {
  color: #c73246;
  font-size: 32rpx;
  font-weight: 500;
}

.shoppingCart .shoppingCartchildRight .botton{
  background-image: linear-gradient(#D0AE72,#C69B51);
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 20rpx;
  margin-right: 40rpx;
  width: 311rpx;
}

.shoppingCart .shoppingCartchildRight .bottonone{
  pointer-events: none;
  background-image: linear-gradient(rgba(208, 174, 114, 0.384),rgba(198, 155, 81, 0.384));
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  text-align: center;
  margin-top: 20rpx;
  margin-right: 40rpx;
  width: 311rpx;
}
